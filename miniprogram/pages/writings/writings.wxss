/* miniprogram/pages/writings/writings.wxss */

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx 0;
} 

.writing_title_text {
  font-size: 38rpx;
  font-style: bold;
}

.writing_content {
  font-size: 32rpx;
  line-height: 60rpx;
  margin-left: 34rpx;
  margin-right: 32rpx;
  margin-top: 32rpx;
  margin-bottom: 90rpx;
}

.bottom {
  position: fixed;
  width: 100%;
  height: 90rpx;
  bottom: 0;
  display: flex;
  background: #fff;
  margin: auto;
  align-items: center;
  justify-content: center;
}

.bottom_item {
  display: flex;
  height: 90rpx;
  width: 33.3%;
  align-items: center;
  justify-content: center;
}

.item_img {
  width: 50rpx;
  height: 50rpx;
  margin-right: 10rpx;
}

.item_text{
  font-size: 34rpx;
  color: #BFBFBF;
}
