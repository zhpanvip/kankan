/* miniprogram/pages/index/index.wxss */
.home_top_view{
  background:#EFEFEF;
  height:0rpx;
}

.swiper_container {
  width: 100%;
  height: 280rpx;
}

.swiper_item {
  width: 100%;
  height: 300rpx;
}

.list_wrapper {
  padding-left: 32rpx;
  padding-right: 32rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.navigation_bar{
  width: 100%;
  background: #409EFF;
   position: fixed;
  z-index: 999;
}
.nav_bar_content{
  display: flex;
  align-items: center;
  height: 100rpx;
}
.nav_title{
  color: white;
  font-size: 36rpx;
  margin-left: 32rpx;
}
.nav_search{
  display: flex;
  align-items: center;
  width: 280rpx;
  margin-left: 32rpx;
  background: #FFFFFF;
  border-radius: 100rpx;
  line-height: 60rpx;
  padding-left: 16rpx;
  margin-top: 10rpx;
}
.nav_search_text{
  font-size: 28rpx;
  color: #BFBFBF;
  margin-left: 10rpx;
}
.nav_search_icon{
  height: 30rpx;
  width: 30rpx;
}
